{
  "name": "hm-merkle-airdrop",
  "description": "Merkle Airdrop smart contract for Fungible token",
  "version": "0.0.1",
  "author": "kzarpresident, hosokawa-zen",
  "files": [
    "/contracts",
    "/deployment",
    "/test"
  ],
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp build --network hardhat",
    "generate-merkle-tree": "ts-node scripts/generate-merkle-root.ts --input scripts/airdrop_list.json --output scripts/result.json",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:list-different",
    "lint:sol": "yarn solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\" --fix",
    "lint:ts": "yarn eslint --config .eslintrc.js --ignore-path ./.eslintignore --ext .js,.ts . --fix",
    "prettier": "prettier --config .prettierrc.json --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc.json --list-different \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test --network hardhat",
    "typechain": "hardhat typechain",
    "verify-merkle-tree": "ts-node scripts/verify-merkle-root.ts --input scripts/result.json"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "4.29.1",
    "@typescript-eslint/parser": "4.29.1",
    "chai": "^4.3.4",
    "commander": "^9.0.0",
    "dotenv": "10.0.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "7.1.4",
    "ethers": "^5.5.2",
    "hardhat": "^2.9.1",
    "hardhat-gas-reporter": "^1.0.6",
    "prettier": "2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.13",
    "solhint": "3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0"
  }
}
